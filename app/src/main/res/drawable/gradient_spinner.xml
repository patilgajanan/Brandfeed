<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="#f8f8fa" android:startColor="#fcfdff" android:type="linear" />

                    <stroke android:width="0.1dp" android:color="#000000" />

                    <corners android:radius="9dp" />

                    <padding android:bottom="0.5dp" android:left="0.5dp" android:right="0.5dp" android:top="0.5dp" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="right|center" android:src="@drawable/spinnerarrow" />
            </item>
        </layer-list>
    </item>

</selector>